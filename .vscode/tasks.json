{
    "version": "2.0.0",
    "cwd": "${workspaceFolder}",
    "tasks": [
        {
            "label": "install",
            "command": "go",
            "args": ["install", "-v", "./..."],
            "group": "build",
            "type": "shell",
        },
        {
            "label": "run",
            "command": "go",
            "args": ["run", "./..."],
            "group": "build",
            "type": "shell",
        },
        {
            "label": "run development env",
            "command": "go",
            "args": ["run", "./..."],
            "group": "build",
            "type": "shell",
            "options": {
                "env": {"APP_ENV": "development"}
            }
        },
        {
            "label": "run production env",
            "command": "go",
            "args": ["run", "./..."],
            "group": "build",
            "type": "shell",
            "options": {
                "env": {"APP_ENV": "production"}
            }
        },        
        {
            "label": "test",
            "command": "go",
            "args": ["test", "-v", "./..."],
            "group": "test",
            "type": "shell",
        },
    ],
}